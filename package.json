{
  "name": "wakeondisplay",
  "version": "1.0.4",
  "main": "main.js",
  "description": "WakeOnDisplay app",
  "author": "ryuya",
  "scripts": {
    "start": "electron .",
    "dist": "node build/build-mac.js --publish never",
    "dist:skip-cert": "electron-builder --publish never"
  },
  "build": {
    "appId": "net.ryuya-dev.net.wod",
    "productName": "WakeOnDisplay",
    "files": [
      "**/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "include": "build/uninstall.nsh"
    },
    "electronLanguages": ["en-US", "ja"],
    "buildVersion": "1.0.0.8",
    "mac": {
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "identity": "ryuya watanabe (FZ35ZF3CZV)",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/mac/icon_sizes.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": false
    },
    "afterSign": "build/notarize.js",
    "afterAllArtifactBuild": "build/notarizeDmg.js",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/windows/icon.ico"
    }
  },
  "dependencies": {
    "applescript": "^1.0.0",
    "auto-launch": "^5.0.6",
    "electron-log": "^5.4.3",
    "electron-store": "11.0.2",
    "node-windows": "1.0.0-beta.8"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "electron": "39.2.7",
    "electron-builder": "26.0.19"
  },
  "packageManager": "pnpm@10.27.0"
}
